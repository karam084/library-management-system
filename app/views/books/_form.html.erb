<%= form_with(model: @book, local: true, :html => {multipart: true}) do |form| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@book.errors.count, "error") %> prohibited
                this book from being saved:
            </h2>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, id: :book_title %>
    </div>

    <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, id: :book_description %>
    </div>

    <div class="field">
        <%= form.label :author %>
        <%= form.text_field :author, id: :book_author %>
    </div>

    <div class="field">
        <%= form.label :isbn %>
        <%= form.text_field :isbn, id: :book_isbn %>
    </div>

    <div class="field">
        <%= form.label :published_date %>
        <%= form.date_field :published_date, id: :book_published_date %>
    </div>

    <div class="field">
        <%= form.label :image %>
        <%= form.file_field :image, id: :book_image %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Back', books_path %>
