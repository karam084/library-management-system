<h2>Checked Out Books</h2>
<table>
    <thead>
        <tr>
            <th>Isbn</th>
            <th>Title</th>
            <th>Authors</th>
            <th>Language</th>
            <th>Published</th>
            <th>Edition</th>
            <th>Subject</th>
            <th>Summary</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book[:isbn] %></td>
            <td><%= book[:title] %></td>
            <td><%= book[:authors] %></td>
            <td><%= book[:language] %></td>
            <td><%= book[:published] %></td>
            <td><%= book[:edition] %></td>
            <td><%= book[:subject] %></td>
            <td><%= book[:summary] %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

